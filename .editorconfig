# EditorConfig configuration for Gaudi 3 Scale Starter
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 100

[*.{tf,tfvars}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{dockerfile,Dockerfile*}]
indent_size = 2

[*.{toml,ini}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{html,htm,xml,svg}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{sql,ddl}]
indent_size = 2
max_line_length = 120