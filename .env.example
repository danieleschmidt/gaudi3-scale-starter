# Gaudi 3 Scale Starter - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== Cloud Provider Credentials =====

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-west-2
AWS_SESSION_TOKEN=  # Optional, for temporary credentials

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1

# ===== Database Configuration =====

# PostgreSQL (Primary database for cluster metadata)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gaudi3_scale
POSTGRES_USER=gaudi3_user
POSTGRES_PASSWORD=your_secure_password

# Redis (Caching and session storage)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ===== Monitoring and Observability =====

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_RETENTION_DAYS=30

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=gaudi3admin

# Weights & Biases (ML Experiment Tracking)
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=gaudi3-scale
WANDB_ENTITY=your_wandb_entity

# TensorBoard Configuration
TENSORBOARD_LOG_DIR=./logs/tensorboard

# ===== Security Configuration =====

# Encryption Keys (Generate with: openssl rand -hex 32)
SECRET_KEY=your_32_character_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CA_PATH=/path/to/ssl/ca.pem

# ===== Habana HPU Configuration =====

# Habana Software Stack
HABANA_LOGS_DIR=./logs/habana
HABANA_TOOLS_DIR=/opt/habanalabs
SYNAPSE_AI_VERSION=1.16.0

# HPU Runtime Environment
PT_HPU_LAZY_MODE=1
PT_HPU_ENABLE_LAZY_COMPILATION=1
PT_HPU_GRAPH_COMPILER_OPT_LEVEL=3
PT_HPU_MAX_COMPOUND_OP_SIZE=256
PT_HPU_ENABLE_SYNAPSE_LAYOUT_OPT=1
PT_HPU_ENABLE_WEIGHT_CPU_PERMUTE=1
PT_HPU_POOL_STRATEGY=OPTIMIZE_UTILIZATION

# ===== Training Configuration =====

# Model Storage
MODEL_CACHE_DIR=./models
CHECKPOINT_DIR=./checkpoints
DATASET_CACHE_DIR=./datasets

# Hugging Face Configuration
HF_TOKEN=your_huggingface_token
HF_CACHE_DIR=./cache/huggingface

# Training Defaults
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=6e-4
DEFAULT_MAX_EPOCHS=3
DEFAULT_PRECISION=bf16-mixed

# ===== Infrastructure Configuration =====

# Terraform Configuration
TF_VAR_cluster_name=gaudi3-cluster
TF_VAR_environment=development
TF_VAR_owner=your_name
TF_VAR_cost_center=ml_research

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
KUBERNETES_NAMESPACE=gaudi3-scale

# Docker Configuration
DOCKER_REGISTRY=your_registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_BUILDKIT=1

# ===== Networking Configuration =====

# Service Endpoints
API_BASE_URL=http://localhost:8000
GRAFANA_BASE_URL=http://localhost:3000
PROMETHEUS_BASE_URL=http://localhost:9090

# Network Security
ALLOWED_HOSTS=localhost,127.0.0.1,*.gaudi3-scale.local
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== Performance Tuning =====

# Concurrency Settings
MAX_WORKERS=8
ASYNC_POOL_SIZE=10
BATCH_PROCESSING_SIZE=100

# Memory Limits
MAX_MEMORY_USAGE_GB=64
CACHE_SIZE_MB=512

# ===== Development Configuration =====

# Debug and Development
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production  # development, staging, production

# Hot Reload (Development only)
RELOAD_ON_CHANGE=false
DEVELOPMENT_MODE=false

# ===== Notification Configuration =====

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
SLACK_CHANNEL=#gaudi3-alerts

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@gaudi3-scale.com

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# ===== Backup and Recovery =====

# Backup Configuration
BACKUP_S3_BUCKET=gaudi3-scale-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Disaster Recovery
DR_REGION=us-east-1
DR_ENABLED=false

# ===== Cost Management =====

# Cost Tracking
COST_ALLOCATION_TAGS=project=gaudi3-scale,team=ml-platform
BUDGET_ALERT_THRESHOLD_USD=1000
COST_OPTIMIZATION_ENABLED=true

# ===== Feature Flags =====

# Experimental Features
ENABLE_AUTO_SCALING=false
ENABLE_SPOT_INSTANCES=false
ENABLE_MULTI_CLOUD=false
ENABLE_COST_OPTIMIZATION=true
ENABLE_ADVANCED_MONITORING=true

# ===== Custom Configuration =====

# User-specific settings - Add your custom environment variables below
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2