{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "gaudi3-scale",
    "namespace": "gaudi3-scale",
    "labels": {
      "app": "gaudi3-scale",
      "version": "0.5.0"
    }
  },
  "spec": {
    "replicas": 5,
    "selector": {
      "matchLabels": {
        "app": "gaudi3-scale"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "gaudi3-scale",
          "version": "0.5.0"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "gaudi3-scale",
            "image": "gaudi3-scale:0.5.0",
            "ports": [
              {
                "containerPort": 8080,
                "name": "health"
              },
              {
                "containerPort": 9090,
                "name": "metrics"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "4Gi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "1Gi"
              }
            },
            "env": [
              {
                "name": "OPTIMIZATION_LEVEL",
                "value": "extreme"
              },
              {
                "name": "CACHE_SIZE",
                "value": "2000"
              },
              {
                "name": "MAX_WORKERS",
                "value": "8"
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "path": "/health",
                "port": 8080
              },
              "initialDelaySeconds": 30,
              "periodSeconds": 10
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/ready",
                "port": 8080
              },
              "initialDelaySeconds": 5,
              "periodSeconds": 5
            }
          }
        ],
        "securityContext": {
          "runAsNonRoot": true,
          "runAsUser": 1000,
          "fsGroup": 1000
        }
      }
    }
  }
}